<Window x:Class="VetTracker2.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetTracker2.UI"
        xmlns:view="clr-namespace:VetTracker2.UI.View"
        mc:Ignorable="d"
        Title="Vet Tracker 2.0"  Height="500" Width="1000" FontSize="24">
    <Grid Margin="20">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="333"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <view:NavigationView Grid.Column="0" DataContext="{Binding NavigationViewModel}"/>
        <view:PetDetailView Grid.Column="1" DataContext="{Binding PetDetailViewModel}"/>

    </Grid>
</Window>
